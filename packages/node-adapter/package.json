{
	"name": "@content-workers/node-adapter",
	"version": "1.0.2",
	"private": false,
	"description": "The official Node adapter for Lucid CMS",
	"type": "module",
	"types": "./dist/index.d.ts",
	"module": "dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc && tsdown",
		"dev": "tsdown --watch",
		"format": "biome format ./src",
		"format:fix": "biome format --write ./src",
		"lint": "biome lint ./src",
		"lint:fix": "biome lint --write ./src"
	},
	"files": ["dist"],
	"author": "Lucid",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/buildlucid/lucid-cms.git",
		"directory": "packages/node-adapter"
	},
	"keywords": ["CMS", "Lucid CMS", "Lucid", "Node", "Environment Adapter"],
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@content-workers/config": "*",
		"@content-workers/core": "*",
		"@types/node": "^22.15.2",
		"tsdown": "^0.15.7",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@hono/node-server": "^1.14.4",
		"@types/node-cron": "^3.0.11",
		"dotenv": "^16.5.0",
		"rolldown": "^1.0.0-beta.43",
		"rollup-plugin-node-externals": "^8.1.1",
		"node-cron": "^4.2.1"
	},
	"peerDependencies": {
		"@content-workers/core": "^0.12.1-alpha.1",
		"hono": "^4.7.11",
		"hono-openapi": "^0.4.8"
	},
    "volta": {
        "node": "24.11.1"
    },
    "engines": {
        "node": "^24.0.0"
    },
	"license": "MIT"
}
