{
	"name": "@content-workers/cloudflare-adapter",
	"version": "1.1.1",
	"private": false,
	"description": "The official Cloudflare Worker adapter for Lucid CMS",
	"type": "module",
	"types": "./dist/index.d.ts",
	"module": "dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
        "./types": {
            "types": "./dist/types.d.ts",
            "default": "./dist/types.js"
        }
	},
	"scripts": {
		"build": "tsc && tsdown",
		"dev": "tsdown --watch",
		"format": "biome format ./src",
		"format:fix": "biome format --write ./src",
		"lint": "biome lint ./src",
		"lint:fix": "biome lint --write ./src"
	},
	"files": ["dist"],
	"author": "Lucid",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/buildlucid/lucid-cms.git",
		"directory": "packages/cloudflare-adapter"
	},
	"keywords": [
		"CMS",
		"Lucid CMS",
		"Lucid",
		"Cloudflare",
		"Worker",
		"Environment Adapter"
	],
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@content-workers/config": "*",
		"@content-workers/core": "*",
		"@types/node": "^22.15.2",
		"tsdown": "^0.15.7",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@hono/node-server": "^1.14.4",
		"rolldown": "^1.0.0-beta.43",
		"wrangler": "^4.20.1"
	},
	"peerDependencies": {
		"@content-workers/core": "^0.12.1-alpha.1",
		"hono": "^4.7.11",
		"hono-openapi": "^0.4.8"
	},
    "volta": {
        "node": "24.11.1"
    },
    "engines": {
        "node": "^24.0.0"
    },
	"license": "MIT"
}
