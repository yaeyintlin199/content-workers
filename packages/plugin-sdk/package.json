{
    "name": "@content-workers/plugin-sdk",
    "version": "0.1.1",
    "description": "The official SDK for creating Lucid CMS plugins with a fluent builder API",
    "type": "module",
    "types": "./dist/index.d.ts",
    "module": "./dist/index.js",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./types": {
            "import": "./dist/types.js",
            "types": "./dist/types.d.ts"
        }
    },
    "scripts": {
        "build": "tsc && tsdown",
        "build:workers": "tsc && tsdown",
        "type-check": "tsc --noEmit",
        "dev": "tsdown --watch --no-clean",
        "format": "biome format ./src",
        "format:fix": "biome format --write ./src",
        "lint": "biome lint ./src",
        "lint:fix": "biome lint --write ./src",
        "test": "vitest",
        "test:run": "vitest run",
        "test:ui": "vitest --ui"
    },
    "files": ["dist"],
    "author": "Lucid",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/buildlucid/lucid-cms.git",
        "directory": "packages/plugin-sdk"
    },
    "keywords": ["CMS", "Lucid CMS", "Lucid", "Plugin", "SDK", "Builder"],
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@content-workers/config": "*",
        "@content-workers/core": "*",
        "@types/node": "^22.15.2",
        "tsdown": "^0.15.7",
        "typescript": "^5.8.3",
        "vitest": "^3.1.2"
    },
    "peerDependencies": {
        "@content-workers/core": "^0.12.1-alpha.1"
    },
    "volta": {
        "node": "24.11.1"
    },
    "engines": {
        "node": "^20.0.0"
    },
    "license": "MIT"
}