{
    "name": "@content-workers/admin",
    "version": "0.12.1-alpha.1",
    "description": "The admin SolidJS SPA for Lucid CMS.",
    "private": false,
    "type": "module",
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "publishConfig": {
        "access": "public"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./assets/*": "./assets/*",
        "./package.json": "./package.json"
    },
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "format": "biome format ./src",
        "format:fix": "biome format --write ./src",
        "lint": "biome lint ./src",
        "lint:fix": "biome lint --write ./src",
        "type-check": "tsc --noEmit",
        "test": "vitest run --test-timeout=0 --hook-timeout=0 --silent",
        "test:watch": "vitest watch --test-timeout=0 --hook-timeout=0",
        "test:coverage": "vitest run --coverage --test-timeout=0 --hook-timeout=0"
    },
    "author": "Lucid",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/buildlucid/lucid-cms.git",
        "directory": "packages/admin"
    },
    "keywords": [
        "CMS",
        "Headless",
        "SolidJS",
        "Typescript",
        "Lucid CMS",
        "Lucid"
    ],
    "license": "BSL-1.0",
    "peerDependencies": {
        "@content-workers/core": "^0.12.1-alpha.1"
    },
    "devDependencies": {
        "@kobalte/core": "^0.13.9",
        "@solid-primitives/scheduled": "^1.5.0",
        "@solidjs/router": "^0.15.3",
        "@solidjs/testing-library": "^0.8.6",
        "@tailwindcss/vite": "^4.1.4",
        "@tanstack/solid-query": "^5.74.4",
        "@testing-library/jest-dom": "^6.6.3",
        "@thisbeyond/solid-dnd": "^0.7.5",
        "@types/classnames": "^2.3.4",
        "@types/quill": "^2.0.14",
        "blurhash": "^2.0.5",
        "classnames": "^2.5.1",
        "fast-average-color": "^9.5.0",
        "fast-deep-equal": "^3.1.3",
        "i18next": "^25.0.1",
        "jsdom": "^25.0.0",
        "nanoid": "^5.1.5",
        "quill": "^2.0.3",
        "rolldown-vite": "^7.1.16",
        "solid-devtools": "^0.34.0",
        "solid-icons": "^1.1.0",
        "solid-js": "^1.9.5",
        "solid-toast": "^0.5.0",
        "tailwindcss": "^4.1.4",
        "typescript": "^5.8.3",
        "vite-plugin-solid": "^2.11.9",
        "vitest": "^3.1.2"
    },
    "volta": {
        "node": "24.11.1"
    },
    "engines": {
        "node": "^24.0.0"
    }
}
