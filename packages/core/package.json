{
    "name": "@content-workers/core",
    "version": "0.12.1-alpha.1",
    "description": "The core of the Lucid CMS. It's responsible for spinning up the API and serving the CMS.",
    "type": "module",
    "types": "./dist/index.d.ts",
    "module": "dist/index.js",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./cli": {
            "types": "./dist/libs/cli/index.d.ts",
            "default": "./dist/libs/cli/index.js"
        },
        "./api": {
            "types": "./dist/api.d.ts",
            "default": "./dist/api.js"
        },
        "./helpers": {
            "types": "./dist/helpers.d.ts",
            "default": "./dist/helpers.js"
        },
        "./types": {
            "types": "./dist/types.d.ts",
            "default": "./dist/types.js"
        },
        "./queue-adapter": {
            "types": "./dist/libs/queue-adapter/index.d.ts",
            "default": "./dist/libs/queue-adapter/index.js"
        },
        "./builders": {
            "types": "./dist/libs/builders/index.d.ts",
            "default": "./dist/libs/builders/index.js"
        },
        "./db-adapter": {
            "types": "./dist/libs/db-adapter/index.d.ts",
            "default": "./dist/libs/db-adapter/index.js"
        },
        "./email-adapter": {
            "types": "./dist/libs/email-adapter/index.d.ts",
            "default": "./dist/libs/email-adapter/index.js"
        },
        "./image-processor": {
            "types": "./dist/libs/image-processor/index.d.ts",
            "default": "./dist/libs/image-processor/index.js"
        },
        "./kv-adapter": {
            "types": "./dist/libs/kv-adapter/index.d.ts",
            "default": "./dist/libs/kv-adapter/index.js"
        },
        "./media-adapter": {
            "types": "./dist/libs/media-adapter/index.d.ts",
            "default": "./dist/libs/media-adapter/index.js"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "build": "tsc && tsdown",
        "dev": "tsdown --watch --no-clean",
        "format": "biome format ./src",
        "format:fix": "biome format --write ./src",
        "lint": "biome lint ./src",
        "lint:fix": "biome lint --write ./src"
    },
    "files": [
        "dist",
        "templates",
        "public",
        "admin"
    ],
    "author": "Lucid",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/buildlucid/lucid-cms.git",
        "directory": "packages/core"
    },
    "keywords": [
        "CMS",
        "Headless",
        "Node",
        "Typescript",
        "ESM",
        "Hono",
        "Kysely",
        "Cloudflare",
        "Lucid CMS",
        "Lucid"
    ],
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@content-workers/config": "*",
        "@types/lodash.merge": "^4.6.9",
        "@types/mime-types": "^2.1.4",
        "@types/mjml": "^4.7.4",
        "@types/node": "^22.15.2",
        "@types/semver": "^7.7.0",
        "@types/slug": "^5.0.9",
        "tsdown": "^0.15.7",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "@inquirer/prompts": "^7.5.3",
        "@noble/hashes": "^1.8.0",
        "@scalar/hono-api-reference": "^0.9.1",
        "better-sqlite3": "^12.4.1",
        "boxen": "^8.0.1",
        "chokidar": "^4.0.3",
        "commander": "^14.0.0",
        "date-fns": "^4.1.0",
        "file-type": "^21.0.0",
        "hono": "^4.7.11",
        "hono-openapi": "^0.4.8",
        "immer": "^10.2.0",
        "jiti": "^2.4.2",
        "kysely": "0.27.4",
        "lodash.merge": "^4.6.2",
        "mime-types": "^3.0.1",
        "minimatch": "^10.0.3",
        "mjml": "^5.0.0-alpha.6",
        "node-object-hash": "^3.1.1",
        "picocolors": "^1.1.1",
        "semver": "^7.7.1",
        "sharp": "^0.34.2",
        "slug": "^10.0.0",
        "zod": "^3.25.67"
    },
    "volta": {
        "node": "24.11.1"
    },
    "engines": {
        "node": "^24.0.0"
    },
    "bin": {
        "lucidcms": "./dist/libs/cli/index.js"
    },
    "sideEffects": false,
    "license": "BSL-1.0"
}