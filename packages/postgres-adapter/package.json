{
	"name": "@content-workers/postgres-adapter",
	"version": "1.0.3",
	"private": false,
	"description": "The official Postgres adapter for Lucid CMS",
	"type": "module",
	"types": "./dist/index.d.ts",
	"module": "dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc && tsdown",
		"dev": "tsdown --watch",
		"format": "biome format ./src",
		"format:fix": "biome format --write ./src",
		"lint": "biome lint ./src",
		"lint:fix": "biome lint --write ./src"
	},
	"files": ["dist"],
	"author": "Lucid",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/buildlucid/lucid-cms.git",
		"directory": "packages/postgres-adapter"
	},
	"keywords": ["CMS", "Lucid CMS", "Lucid", "Postgres", "DB Adapter"],
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@content-workers/config": "*",
		"@content-workers/core": "*",
		"@types/node": "^22.15.2",
		"@types/pg": "^8.11.14",
		"tsdown": "^0.15.7",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"kysely": "0.27.4",
		"kysely-postgres-js": "^2.0.0",
		"postgres": "^3.4.7"
	},
	"peerDependencies": {
		"@content-workers/core": "^0.12.1-alpha.1"
	},
    "volta": {
        "node": "24.11.1"
    },
    "engines": {
        "node": "^24.0.0"
    },
	"license": "MIT"
}
