{
    "extends": "@content-workers/config/tsconfig.base.json",
    "exclude": [
        "./coverage",
        "./dist",
        "jest.config.ts",
        "./cms",
        "./node_modules",
        "./temp",
        "./.turbo",
        "./scripts",
        "./vitest.config.ts",
        "**/*.test.ts",
        "**/mock-config/**",
        "./src/utils/test-helpers/config/**",
    ],
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "paths": {
            "@content-workers/sqlite-adapter": [
                "../sqlite-adapter/src"
            ],
            "@content-workers/node-adapter": [
                "../node-adapter/src"
            ]
        }
    },
}