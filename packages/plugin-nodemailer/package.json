{
    "name": "@lucidcms/plugin-nodemailer",
    "version": "1.1.2",
    "description": "The official Nodemailer plugin for Lucid CMS",
    "type": "module",
    "types": "./dist/index.d.ts",
    "module": "dist/index.js",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "tsc && tsdown",
        "dev": "tsdown --watch",
        "format": "biome format ./src",
        "format:fix": "biome format --write ./src",
        "lint": "biome lint ./src",
        "lint:fix": "biome lint --write ./src"
    },
    "files": ["dist"],
    "author": "Lucid",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/buildlucid/lucid-cms.git",
        "directory": "packages/plugin-nodemailer"
    },
    "keywords": ["CMS", "Lucid CMS", "Lucid", "Nodemailer", "Plugin"],
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@lucidcms/config": "*",
        "@lucidcms/core": "*",
        "@lucidcms/plugin-sdk": "*",
        "@types/node": "^22.15.2",
        "@types/nodemailer": "^7.0.1",
        "tsdown": "^0.15.7",
        "typescript": "^5.8.3"
    },
    "peerDependencies": {
        "@lucidcms/core": "^0.12.0-alpha.1",
        "@lucidcms/plugin-sdk": "^0.1.0"
    },
    "dependencies": {
        "nodemailer": "^7.0.3"
    },
    "volta": {
        "node": "24.11.1"
    },
    "engines": {
        "node": "^24.0.0"
    },
    "license": "MIT"
}
